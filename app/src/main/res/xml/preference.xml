<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="setting"
    android:title="설정">

    <PreferenceCategory
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="setting_1"
        android:title="앱 정보">
        <Preference
            android:key="setting_1_1"
            android:title="대평고등학교 앱"
            android:summary="대평고등학교에 관한 정보들을 보여줍니다."
            android:selectable="true" />
        <Preference
            android:key="setting_1-2"
            android:title="앱 버전"
            android:summary="3.4"
            android:defaultValue="true"/>
    </PreferenceCategory>


    <PreferenceCategory
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="setting_2"
        android:title="제작자">
        <Preference
            android:key="setting_2_1"
            android:title="프로젝트 총괄 및 제작"
            android:summary="제 15기 입학생 방준서"
            android:defaultValue="true"/>
        <Preference
            android:key="setting_2_2"
            android:title="앱 아이콘 제작"
            android:summary="방준서"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="setting_3"
        android:title="문의하기">
        <Preference
            android:summary="개발자에게 메일을 보냅니다."
            android:title="메일 보내기" >
            <intent
                android:action="android.intent.action.SENDTO"
                android:data="mailto:junseo1020@gmail.com" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="setting_barcode"
        android:title="학생증 관리">
        <Preference
            android:title="학생증 정보 제거"
            android:key="barcode">
        </Preference>
    </PreferenceCategory>

   <PreferenceCategory
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="setting_4"
        android:title="라이센스">
        <Preference
            android:summary="라이센스 확인하기"
            android:key="lisence"
            android:title="오픈소스 라이센스" >
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>